{
    "archive-view": {
        "name": {
            "en": "Archive",
            "de": "Archiv"
        },
        "description": {
            "en": "Allows access to archives and documents.",
            "de": "Erlaubt das arbeiten mit archiven und den Zugriff auf Dokumente."
        },
        "resources": [
          {
            "type": "rest",
            "resourceId": "^/invoices",
            "actions": ["view"]
          },
          {
            "type": "rest",
            "resourceId": "^/api/indices.*",
            "actions": ["view", "create"]
          },
          {
            "type": "rest",
            "resourceId": "^/api/tenantconfig/.*",
            "actions": ["view"]
          },
          {
            "type": "rest",
            "resourceId": "^/api/searches.*",
            "actions": ["view", "create"]
          }
        ]
    },
    "archive-tenant-mgmt": {
        "name": {
            "en": "Archive tenant management",
            "de": "Archiv Mandanten Verwaltung"
        },
        "description": {
            "en": "Allows to create tenant configurations.",
            "de": "Erlaubt das hinzuf√ºgen neuer Mandanten."
        },
        "resources": [
          {
            "type": "rest",
            "resourceId": "^/tenantconfig",
            "actions": ["create"]
          }
        ]
    }
}
